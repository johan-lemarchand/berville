{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% include "layout/header.html.twig" %}

    <section class="w-full py-8 bg-gray-100 text-gray-900 pt-20">
        <div class="mx-auto flex shadow-lg rounded-lg bg-white lg:w-3/4">

            <div class="w-1/2 p-8 rounded-lg md:flex flex-col bg-gray-50">
                <p class="text-xl font-bold mb-4 text-blue-500">
                    Berville
                </p>
                <img class="rounded-lg h-full object-cover object-center" src="{{ asset('images/judo-login.jpg') }}" alt={"judo"}>
            </div>

            <div class="w-full md:w-1/2 p-8 flex flex-col">
                <p class="text-3xl font-bold mb-2 text-gray-700">
                    S'inscrire au club
                </p>
                <p class="text-sm font-medium text-gray-400">
                    Vous avez déja un compte ? <a href="{{ path('app_login') }}" class="text-blue-500">Se connecter</a><br><br>
                    <div class="text-red-600">c'est l'administrateur qui validera votre compte, vous serez notifié par mail quand celui-ci le sera.</div>
                </p>
                {% for message in app.flashes('message') %}
                    <div class="alert alert-success" role="alert">{{ message }}</div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'flex text-gray-400 font-medium flex-col'}}) }}

                {{ form_label(registrationForm.firstname, 'Nom', {'label_attr': {'class': 'uppercase mt-4'}, errors: []}) }}
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'border px-4 ring-2 focus:ring-blue-300 ring-transparent transform duration-200 ease-in-out py-2 rounded-lg focus:outline-none'}}) }}
                <div class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">{{ form_errors(registrationForm.firstname) }}</div>

                {{ form_label(registrationForm.lastname, 'Prénom', {'label_attr': {'class': 'uppercase mt-4'}, errors: []}) }}
                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'border px-4 ring-2 focus:ring-blue-300 ring-transparent transform duration-200 ease-in-out py-2 rounded-lg focus:outline-none'}}) }}
                <div class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">{{ form_errors(registrationForm.lastname) }}</div>

                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'uppercase mt-4'}, errors: []}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'border px-4 ring-2 focus:ring-blue-300 ring-transparent transform duration-200 ease-in-out py-2 rounded-lg focus:outline-none'}}) }}
                <div class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">{{ form_errors(registrationForm.email) }}</div>

                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'uppercase mt-4'}, errors: []}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'border px-4 ring-2 focus:ring-blue-300 ring-transparent transform duration-200 ease-in-out py-2 rounded-lg focus:outline-none'}}) }}
                <div class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">{{ form_errors(registrationForm.plainPassword)}} </div>

                {{ form_widget(registrationForm.submit, {'attr': {'class': 'h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg p-4 text-white mt-4'}}) }}

                {{ form_end(registrationForm) }}

                <button class="flex justify-evenly mt-2 items-center px-4 border border-gray-900 rounded-md h-16 transition-colors duration-300 ease-in-out bg-gradient-to-br from-blue-500 to-purple-600  text-white  hover:bg-indigo-700">
                    <svg
                            class="w-6 fill-current"
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                    >
                        <path
                                d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"
                        />
                    </svg>
                    <p>S'inscrire avec Facebook</p>
                </button>
                <button class="flex justify-evenly mt-2 items-center px-4 border border-gray-900 rounded-md h-16 text-gray-900 transition-colors duration-300 ease-in-out hover:bg-white">
                    <svg
                            class="w-6"
                            viewBox="0 0 533.5 544.3"
                            xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                                d="M533.5 278.4c0-18.5-1.5-37.1-4.7-55.3H272.1v104.8h147c-6.1 33.8-25.7 63.7-54.4 82.7v68h87.7c51.5-47.4 81.1-117.4 81.1-200.2z"
                                fill="#4285f4"
                        />
                        <path
                                d="M272.1 544.3c73.4 0 135.3-24.1 180.4-65.7l-87.7-68c-24.4 16.6-55.9 26-92.6 26-71 0-131.2-47.9-152.8-112.3H28.9v70.1c46.2 91.9 140.3 149.9 243.2 149.9z"
                                fill="#34a853"
                        />
                        <path
                                d="M119.3 324.3c-11.4-33.8-11.4-70.4 0-104.2V150H28.9c-38.6 76.9-38.6 167.5 0 244.4l90.4-70.1z"
                                fill="#fbbc04"
                        />
                        <path
                                d="M272.1 107.7c38.8-.6 76.3 14 104.4 40.8l77.7-77.7C405 24.6 339.7-.8 272.1 0 169.2 0 75.1 58 28.9 150l90.4 70.1c21.5-64.5 81.8-112.4 152.8-112.4z"
                                fill="#ea4335"
                        />
                    </svg>
                    <p>S'inscrire avec Google</p>
                </button>
            </div>
        </div>
    </section>
    {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

    {% include "layout/footer.html.twig" %}
{% endblock %}
