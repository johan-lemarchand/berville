<form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet article?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button  aria-label="Supprimer l'article" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-red-500  shadow ripple hover:shadow-lg hover:bg-red-600 focus:outline-none">
        <i  class="far fa-trash-alt"></i>
    </button>
</form>