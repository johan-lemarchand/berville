{% extends 'base.html.twig' %}

{% block title %}Editer l'article{% endblock %}

{% block body %}
    <section class="min-h-screen bg-gradient-to-br from-purple-900 to-indigo-900 flex">
        {% include 'layout_dashboard/_navbar.html.twig' %}
        <div class="lg:w-4/4 w-full p-4">
            <div class="bg-gray-100 p-8 flex flex-col rounded-3xl h-full w-full">
                <div class="flex justify-between items-center">
                    <div class="flex flex-col">
                        <h1 class="text-gray-600 font-bold text-4xl">Les articles</h1>
                    </div>
                    <button class="bg-green-200 relative h-12 w-12 rounded-lg flex justify-center items-center">
                        <div class="w-6 h-6 transform font-bold text-xs -translate-y-2 translate-x-2 border-2 border-gray-100 absolute top-0 right-0 rounded-full text-gray-50 bg-green-500 flex justify-center items-center">
                            1
                        </div>
                        <svg class="w-8 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                    </button>
                </div>
                <div class="mt-8 flex flex-col justify-center lg:flex-row">
                    {{ include('article/_form.html.twig', {'button_label': 'Editer'}|default('undefined')) }}
                </div>
                <div class="m-6 space-x-3 flex justify-center">
                    <a href="{{ path('article') }}">
                        <button  aria-label="Retourner sur la liste" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="fas fa-undo"></i>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
