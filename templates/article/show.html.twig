{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <section class="min-h-screen bg-gradient-to-br from-purple-900 to-indigo-900 flex">
        {% include 'layout_dashboard/_navbar.html.twig' %}
        <div class="lg:w-4/4 w-full p-4">
            <div class="bg-gray-100 p-8 flex flex-col rounded-3xl h-full w-full">
                {% include("layout/flashy.html.twig") %}
                <div class="flex justify-between items-center">
                    <div class="flex flex-col">
                        <h1 class="text-gray-600 font-bold text-4xl">Les articles</h1>
                    </div>
                    <button class="bg-green-200 relative h-12 w-12 rounded-lg flex justify-center items-center">
                        <div class="w-6 h-6 transform font-bold text-xs -translate-y-2 translate-x-2 border-2 border-gray-100 absolute top-0 right-0 rounded-full text-gray-50 bg-green-500 flex justify-center items-center">
                            1
                        </div>
                        <svg class="w-8 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                    </button>
                </div>
                <div class="flex flex-col lg:flex-row justify-center">
                    <article class="mx-auto group w-full shadow-2xl max-w-md rounded-b-2xl transform duration-500 hover:-translate-y-2 cursor-pointer">
                                <section class="content bg-cover bg-center h-64 rounded-2xl" {% for mainImage in article.mainImage %}style="background-image: url({{ 'uploads/mainArticle/img/' ~ mainImage.name }});"{% endfor %}>
                                    <div class="flex items-end w-full h-full bg-black bg-opacity-20 text-white text-sm font-bold  p-4 rounded-2xl">
                                        <div class="w-1/2 flex items-center">
                                        </div>
                                    </div>
                                </section>
                                <div class="my-5 p-4 flex">
                                    <div class="w-full flex justify-between space-x-1">
                                        {% for image in article.images %}
                                            <img class="w-10 h-10 rounded-md" src="{{ asset('uploads/article/img/'~image.name) | default('undefined') | imagine_filter('thumbarticle') }}" alt="photo de l'article">
                                            <a href="{{ path('article_photo_delete', {'image_id':image.id, 'article_id':article.id}) }}">supprimer la photo</a>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="mt-14 px-4">
                                    {% for tags in article.tag %}
                                        <div class="text-xs inline-flex items-center font-bold leading-sm uppercase px-3 py-1 bg-{{ tags.colors.name }}-200 text-{{ tags.colors.name }}-700 rounded-full">
                                            {{ tags.name }}
                                        </div>
                                    {% endfor %}
                                    <h2 class="mt-4 text-base font-medium text-gray-400">{{ article.title }}</h2>
                                    <p class="mt-2 text-2xl text-gray-700">{{ article.content }}  </p>
                                </div>
                        <div class="flex justify-between items-center m-5">
                            <div class="flex items-center space-x-4">
                                <img class="w-7 h-7 rounded-full"
                                     src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/jese-leos.png"
                                     alt="{{ article.user.lastname }} avatar">
                                <span class="font-medium dark:text-white">{{ article.user.lastname }}</span>
                            </div>
                            <div class="inline-flex items-center font-medium text-primary-600 text-blue-700 hover:underline">
                                Lire l'article
                                <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                          clip-rule="evenodd"></path>
                                </svg>
                            </div>
                        </div>
                            </article>
                </div>
                <div class="m-6 space-x-3 flex justify-center">
                    <a href="{{ path('article') }}">
                        <button  aria-label="Retourner sur la liste" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="fas fa-undo"></i>
                        </button>
                    </a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">
                        <button aria-label="Editer l'article" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="far fa-edit"></i>
                        </button>
                    </a>
                    {{ include('article/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script>
        window.onload = () => {
            if (document.querySelector('#flashy')) {
                function stopMessageFlash() {
                    const flashy = document.querySelector('#flashy');
                    flashy.classList.replace('message-flash', 'message-end');
                }
                setTimeout(stopMessageFlash, 4000);
                setTimeout(() => {
                    document.querySelector('#flashy').remove();
                }, 6000)
            }
        }
    </script>
{% endblock %}

