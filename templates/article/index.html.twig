        <section class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-10">
            {% for article in articles %}
                <article class="mx-auto group w-full shadow-2xl max-w-md rounded-b-2xl transform duration-500 hover:-translate-y-2 cursor-pointer">
                    <section class="content bg-cover bg-center h-64 rounded-2xl"
                             {% for mainImage in article.mainImage %}style="background-image: url({{ 'uploads/mainArticle/img/' ~ mainImage.name }});"{% endfor %}>
