{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <section class="min-h-screen bg-gradient-to-br from-purple-900 to-indigo-900 flex">
        {% include 'layout_dashboard/_navbar.html.twig' %}
        <div class="lg:w-4/4 w-full p-4">
            <div class="bg-gray-100 p-8 flex flex-col rounded-3xl h-full w-full">
                <div class="flex justify-between items-center">
                    <div class="flex flex-col">
                        <h1 class="text-gray-600 font-bold text-4xl">Les évènements</h1>
                    </div>
                    <button class="bg-green-200 relative h-12 w-12 rounded-lg flex justify-center items-center">
                        <div class="w-6 h-6 transform font-bold text-xs -translate-y-2 translate-x-2 border-2 border-gray-100 absolute top-0 right-0 rounded-full text-gray-50 bg-green-500 flex justify-center items-center">
                            1
                        </div>
                        <svg class="w-8 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                    </button>
                </div>
                <div class="mt-24 lg:flex shadow rounded-lg border  border-gray-400">
                    <div class="bg-blue-600 rounded-lg lg:w-2/12 py-4 block h-full shadow-inner">
                        <div class="text-center tracking-wide">
                            <div class="text-white font-bold text-2xl ">{{ event.date ? event.date|date('d/m/Y') : '' }}</div>
                        </div>
                    </div>
                    <div class="w-full  lg:w-11/12 xl:w-full px-1 bg-white py-5 lg:px-2 lg:py-2 tracking-wide">
                        <div class="flex flex-row lg:justify-start justify-center">
                            <div class="text-gray-700 font-medium text-sm text-center lg:text-left px-2">
                               adresse: {{ event.place }}, {{ event.zip }}, {{ event.city }}
                            </div>
                        </div>
                        <div class="font-semibold text-gray-800 text-xl text-center lg:text-left px-2">
                            titre: {{ event.title }}
                        </div>

                        <div class="text-gray-600 font-medium text-sm pt-1 text-center lg:text-left px-2">
                            description: {{ event.content }}
                        </div>
                    </div>
                    <div class="my-5 p-4 flex">
                        <div class="w-full flex justify-between space-x-1">
                            {% for image in event.images %}
                                <img class="w-30 h-30 rounded-md" src="{{ asset('uploads/event/img/'~image.name) | default('undefined') | imagine_filter('thumbevent') }}" alt="photo de l'event">
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="m-6 space-x-3 flex justify-center">
                    <a href="{{ path('event_home') }}">
                        <button  aria-label="Retourner sur la liste" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="fas fa-undo"></i>
                        </button>
                    </a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}">
                        <button aria-label="Editer l'évènement" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="far fa-edit"></i>
                        </button>
                    </a>
                    {{ include('event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}

