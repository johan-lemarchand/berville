<div  id="page-wrap" class="w-1/4 lg:flex text-gray-200 flex-col">
    <a href='{{ path('home_dashboard') }}'>
        <div class="flex p-4 items-center">
            <div class="w-12 h-12 rounded-lg mr-4 bg-gradient-to-br to-pink-500 from-pink-300 flex items-center justify-center">
                <i class="fas fa-user"></i>
            </div>
            {% if app.user %}
                <p class="font-semibold text-2xl">{{ app.user.lastname }}</p>
            {% endif %}
        </div>
    </a>
    <div>
        <ul>
            <a href='{{ path('home_dashboard') }}'>
                <li class="flex px-4 items-center mt-10 {{ app.request.get('_route') == 'home_dashboard' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="fas fa-desktop"></i>
                    </div>
                    <p class="font-medium text-lg">Tableau de bord</p>
                </li>
            </a>
            <a href='{{ path('home_user') }}'>
                <li class="flex px-4 items-center my-4 {{ app.request.get('_route') == 'home_user' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="fas fa-users"></i>
                    </div>
                    <p class="font-medium text-lg">Membres</p>
                </li>
            </a>
            <a href='{{ path('role_home') }}'>
                <li class="flex px-4 items-center my-4 {{ app.request.get('_route') == 'role_home' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
