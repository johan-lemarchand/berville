                </li>
            </a>
            <a href='{{ path('event_home') }}'>
                <li class="flex px-4 items-center my-4 {{ app.request.get('_route') == 'event_home' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="far fa-calendar-alt"></i>
                    </div>
                    <p class="font-medium text-lg">Evénements</p>
                </li>
            </a>
            <a href='{{ path('article') }}'>
                <li class="flex px-4 items-center my-4 {{ app.request.get('_route') == 'article' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <p class="font-medium text-lg">Articles</p>
                </li>
            </a>
            <a href='{{ path('tag_home') }}'>
                <li class="flex px-4 items-center my-4 {{ app.request.get('_route') == 'tag_home' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="fas fa-tags"></i>
                    </div>
                    <p class="font-medium text-lg">Tags</p>
                </li>
            </a>
            <a href='{{ path('app_training_show') }}'>
                <li class="flex px-4 items-center my-4 {{ app.request.get('_route') == 'app_training_show' ? 'active [&.active]:rounded-r-full w-full py-4 bg-indigo-900' }}">
