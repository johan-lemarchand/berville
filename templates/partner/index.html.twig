{% extends 'base.html.twig' %}

{% block title %}Partner index{% endblock %}

{% block body %}<section class="min-h-screen bg-gradient-to-br from-purple-900 to-indigo-900 flex">
    {% include 'layout_dashboard/_navbar.html.twig' %}
    <div class="lg:w-4/4 w-full p-4">
        <div class="bg-gray-100 p-8 flex flex-col rounded-3xl h-full w-full">
            <div class="flex justify-between items-center">
                <div class="flex flex-col">
                    <h1 class="text-gray-600 font-bold text-4xl">Les partenaires</h1>
                </div>
                <button class="bg-green-200 relative h-12 w-12 rounded-lg flex justify-center items-center">
                    <div class="w-6 h-6 transform font-bold text-xs -translate-y-2 translate-x-2 border-2 border-gray-100 absolute top-0 right-0 rounded-full text-gray-50 bg-green-500 flex justify-center items-center">
                        1
                    </div>
                    <svg class="w-8 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                </button>
            </div>
            <div class="flex flex-col lg:flex-row">
                <table class="border-collapse w-full mt-10">
                    <thead>
                    <tr>
                        <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300  lg:table-cell">Nom</th>
                        <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300  lg:table-cell">Adresse</th>
                        <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300  lg:table-cell">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for partner in partners %}
                        <tr class="bg-white lg:hover:bg-gray-100 flex lg:table-row flex-row lg:flex-row flex-wrap lg:flex-no-wrap mb-10 lg:mb-0">
                            <td class="w-full lg:w-auto p-3 text-gray-800  border border-b block lg:table-cell relative lg:static">
                                <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase">Nom</span>
                                {{ partner.name|u.truncate(20, '...', false) }}
                            </td>
                            <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b text-center block lg:table-cell relative lg:static">
                                <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase">Adresse</span>
                                {{ partner.address|u.truncate(20, '...', false) }}
                            </td>
                            <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b text-center block lg:table-cell relative lg:static">
                                <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase">Action</span>
                                <div class="m-6 space-x-3 flex justify-center">
                                    <a href="{{ path('partner_show', {'id': partner.id}) }}">
                                        <button  aria-label="Voir le partenaire" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                                            <i class="far fa-eye "></i>
                                        </button>
                                    </a>
                                    <a href="{{ path('partner_edit', {'id': partner.id}) }}">
                                        <button aria-label="Editer le partneraire" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                                            <i class="far fa-edit"></i>
                                        </button>
                                    </a>
                                    {{ include('partner/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="flex justify-between items-center">
                {% do partners.setPageRange(10) %}
                {{ knp_pagination_render(partners, 'layout/pagination.html.twig') }}

                <div class="flex p-4 items-center">
                    <a href='{{ path('partner_new') }}'>
                        <div class="w-12 h-12 rounded-lg mr-4 bg-green-200  flex items-center justify-center">
                            <i class="far fa-plus-square"></i>
                        </div>
                    </a>
                    <p class="font-semibold text-2xl">Ajouter un partenaire</p>
                </div>

            </div>
        </div>
    </div>
    </section>
{% endblock %}
