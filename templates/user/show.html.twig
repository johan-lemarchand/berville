{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <section class="min-h-screen bg-gradient-to-br from-purple-900 to-indigo-900 flex">
        <div  id="page-wrap" class="hidden w-1/4 lg:flex text-gray-200 flex-col">
            <a href='{{ path('home_dashboard') }}'>
                <div class="flex p-4 items-center">
                    <div class="w-12 h-12 rounded-lg mr-4 bg-gradient-to-br to-pink-500 from-pink-300 flex items-center justify-center">
                        <i class="fas fa-user"></i>
                    </div>
                    <p class="font-semibold text-2xl">Johan</p>
                </div>
            </a>
            <div>
                <ul>
                    <a href='{{ path('home_dashboard') }}'>
                        <li class="flex px-4 items-center mt-10">
                            <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                                <i class="fas fa-desktop"></i>
                            </div>
                            <p class="font-medium text-lg">Tableau de bord</p>
                        </li>
                    </a>
                    <a href='{{ path('home_user') }}'>
                        <li class="flex px-4 items-center my-4 rounded-r-full w-full py-4 bg-indigo-900">
                            <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                                <i class="fas fa-users"></i>
                            </div>
                            <p class="font-medium text-lg">Membres</p>
                        </li>
                    </a>
                    <a href='{{ path('role_home') }}'>
                        <li class="flex px-4 items-center my-4">
                            <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                                <i class="fas fa-user-tag"></i>
                            </div>
                            <p class="font-medium text-lg">Rôles</p>
                        </li>
                    </a>
                    <li class="flex px-4 items-center my-4">
                        <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                            <i class="far fa-calendar-alt"></i>
                        </div>
                        <p class="font-medium text-lg">Evénements</p>
                    </li>
                    <a href='{{ path('article') }}'>
                        <li class="flex px-4 items-center my-4 ">
                            <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <p class="font-medium text-lg">Articles</p>
                        </li>
                    </a>
                    <a href='{{ path('tag_home') }}'>
                        <li class="flex px-4 items-center my-4">
                            <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                                <i class="fas fa-tags"></i>
                            </div>
                            <p class="font-medium text-lg">Tags</p>
                        </li>
                    </a>
                    <li class="flex px-4 items-center my-4">
                        <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                            <i class="far fa-envelope"></i>
                        </div>
                        <p class="font-medium text-lg">Messagerie</p>
                    </li>
                </ul>
            </div>
            <div class="bg-purple-800 m-4 flex flex-col rounded-lg p-8 items-center justify-evenly">
                <div class="flex items-center">
                    <div class="h-10 w-10 flex items-center justify-center rounded-lg bg-green-400 text-gray-50">
                        <svg class="w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                    </div>
                    <div class="flex ml-4 flex-col">

                    </div>
                </div>
                <div class="w-full flex mt-4">

                </div>
            </div>
            <a href='{{ path('app_logout') }}'>
                <div class="flex px-4 items-center my-4">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    <p class="font-medium text-lg">Déconnexion</p>
                </div>
            </a>
            <a href='{{ path('app_homepage') }}'>
                <div class="flex px-4 items-center my-4">
                    <div class="w-10 h-10 mr-4 flex justify-center items-center bg-gray-50 opacity-50 rounded-lg text-purple-800">
                        <i class="fas fa-pager"></i>
                    </div>
                    <p class="font-medium text-lg">Retour sur le site</p>
                </div>
            </a>
        </div>
        <div class="lg:w-4/4 w-full p-4">
            <div class="bg-gray-100 p-8 flex flex-col rounded-3xl h-full w-full">
                <div class="flex justify-between items-center">
                    <div class="flex flex-col">
                        <h1 class="text-gray-600 font-bold text-4xl">Les membres</h1>
                    </div>
                    <button class="bg-green-200 relative h-12 w-12 rounded-lg flex justify-center items-center">
                        <div class="w-6 h-6 transform font-bold text-xs -translate-y-2 translate-x-2 border-2 border-gray-100 absolute top-0 right-0 rounded-full text-gray-50 bg-green-500 flex justify-center items-center">
                            1
                        </div>
                        <svg class="w-8 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                    </button>
                </div>
                <div class="flex flex-col lg:flex-row justify-center mt-32">

                    <div class="bg-white relative shadow-xl w-5/6 md:w-4/6  lg:w-3/6 xl:w-2/6 mx-auto">
                        <div class="flex justify-center">
                            <img src="{{ asset('uploads/user/avatar/'~{{ user.avatar|serialize(format = 'json') }}) | default('undefined')| imagine_filter('thumbuseravatar')}}" alt="photo utilisateur" class="rounded-full mx-auto absolute -top-20 w-32 h-32 shadow-2xl border-4 border-white">
                        </div>
                        <div class="mt-16">
                            <h1 class="font-bold text-center text-3xl text-gray-900">{{ user.firstname }} {{ user.lastname }} </h1>
                            <p class="text-center text-sm text-gray-400 font-medium">{{ user.address }}</p>
                            <div class="my-5">
                                <span class="text-indigo-200 block text-center font-medium leading-6 px-6 py-3 bg-indigo-600 font-bold">{{ user.email }}</span>
                            </div>
                            <div class="flex justify-evenly my-5">
                                <a href="" class="bg font-bold text-sm text-blue-800 w-full text-center py-3 hover:bg-blue-800 hover:text-white hover:shadow-lg">Facebook</a>
                                <a href="" class="bg font-bold text-sm text-blue-400 w-full text-center py-3 hover:bg-blue-400 hover:text-white hover:shadow-lg">Twitter</a>
                                <a href="" class="bg font-bold text-sm text-yellow-600 w-full text-center py-3 hover:bg-yellow-600 hover:text-white hover:shadow-lg">Instagram</a>
                                <a href="" class="bg font-bold text-sm text-gray-600 w-full text-center py-3 hover:bg-gray-600 hover:text-white hover:shadow-lg">Email</a>
                            </div>

                            <div class="w-full">
                                <h3 class="font-bold text-gray-600 text-left px-4">Informations</h3>
                                <div class="mt-5 w-full">
                                    <div class="w-full border-t-2 border-gray-100 font-medium text-gray-600 py-4 px-4 w-full block hover:bg-gray-100 transition duration-150">
                                       Date de naissance : {{ user.birthday ? user.birthday|date('Y-m-d') : ''   }}
                                    </div>

                                    <div class="w-full border-t-2 border-gray-100 font-medium text-gray-600 py-4 px-4 w-full block hover:bg-gray-100 transition duration-150">
                                        Numéro de téléphone : {{ user.phone }}
                                    </div>

                                    <div class="w-full border-t-2 border-gray-100 font-medium text-gray-600 py-4 px-4 w-full block hover:bg-gray-100 transition duration-150">
                                        License : {{ user.license }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-6 space-x-3 flex justify-center">
                    <a href="{{ path('home_user') }}">
                        <button  aria-label="Retourner sur la liste" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="fas fa-undo"></i>
                        </button>
                    </a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                        <button aria-label="Editer l'utilisateur" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-blue-700  shadow ripple hover:shadow-lg hover:bg-blue-800 focus:outline-none">
                            <i class="far fa-edit"></i>
                        </button>
                    </a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
