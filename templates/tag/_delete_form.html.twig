<form method="post" action="{{ path('tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce tag?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button  aria-label="Supprimer le tag" data-balloon-pos="up" class="inline-block p-3 text-center text-white transition bg-red-500  shadow ripple hover:shadow-lg hover:bg-red-600 focus:outline-none">
        <i  class="far fa-trash-alt"></i>
    </button>
</form>
